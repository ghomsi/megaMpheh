<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <filter>
    <filter-name>Set Character Encoding</filter-name>
    <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>ignore</param-name>
      <param-value>false</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>Set Character Encoding</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>PrechargementFilter</filter-name>
    <filter-class>com.mpheh.filters.RestrictionFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>PrechargementFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>com.mpheh.config.InitialisationDaoFactory</listener-class>
  </listener>
  <servlet>
    <servlet-name>index</servlet-name>
    <servlet-class>com.mpheh.servlets.Index</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>index</servlet-name>
    <url-pattern>/accueil</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>deconnectionReservation</servlet-name>
    <servlet-class>com.mpheh.servlets.DeconnectionReservation</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>deconnectionReservation</servlet-name>
    <url-pattern>/deconnectionSuivie</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>deconnection</servlet-name>
    <servlet-class>com.mpheh.servlets.Deconnection</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>deconnection</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>agenda</servlet-name>
    <servlet-class>com.mpheh.servlets.Agenda</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>agenda</servlet-name>
    <url-pattern>/reservation</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>enregistrerMenu</servlet-name>
    <servlet-class>com.mpheh.servlets.EnregistrerMenu</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>enregistrerMenu</servlet-name>
    <url-pattern>/enregistrermenu</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>reserverMenu</servlet-name>
    <servlet-class>com.mpheh.servlets.ReserverMenu</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>reserverMenu</servlet-name>
    <url-pattern>/reservermenu</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ajouterUtilisateur</servlet-name>
    <servlet-class>com.mpheh.servlets.AjouterUtilisateur</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ajouterUtilisateur</servlet-name>
    <url-pattern>/ajouterUtilisateur</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>mpheh</servlet-name>
    <servlet-class>com.mpheh.servlets.PointDR</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>mpheh</servlet-name>
    <url-pattern>/mpheh</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>connection</servlet-name>
    <servlet-class>com.mpheh.servlets.Connection</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>connection</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ajouterTable</servlet-name>
    <servlet-class>com.mpheh.servlets.AjouterTable</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ajouterTable</servlet-name>
    <url-pattern>/ajoutertable</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ajouterContact</servlet-name>
    <servlet-class>com.mpheh.servlets.AjouterContact</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ajouterContact</servlet-name>
    <url-pattern>/ajoutercontact</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ajouterPointDR</servlet-name>
    <servlet-class>com.mpheh.servlets.AjouterPointDeRestauration</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ajouterPointDR</servlet-name>
    <url-pattern>/ajoutermpheh</url-pattern>
  </servlet-mapping>
</web-app>